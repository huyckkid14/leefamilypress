    text-align: left;
    max-width: 900px;
    margin: auto;
  }

  .content-section h2 {
    font-size: 2rem;
    margin-bottom: 1rem;
    text-align: center;
    background: linear-gradient(90deg, #ff6600, #ffaa00);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  .content-section h3 {
    margin-top: 2rem;
    font-size: 1.3rem;
    color: #ff9933;
  }
  .content-section p {
    color: #ccc;
    line-height: 1.8;
    margin-top: 0.5rem;
    font-size: 1rem;
  }

  footer {
